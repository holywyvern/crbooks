<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    
    	<!-- Properties -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">crbooks</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/crbooks</property>
        <property name="hibernate.connection.username">crbooks</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
	    
	    <!-- Mapped classes -->
   		<mapping class="org.crsystems.crbooks.models.Author"/>
    	<mapping class="org.crsystems.crbooks.models.Book"/>  
    	<mapping class="org.crsystems.crbooks.models.BookCategory"/>
    	<mapping class="org.crsystems.crbooks.models.Order"/>  
    	<mapping class="org.crsystems.crbooks.models.OrderItem"/>  
    	<mapping class="org.crsystems.crbooks.models.OrderState"/> 
    	<mapping class="org.crsystems.crbooks.models.Publisher"/>     
    	<mapping class="org.crsystems.crbooks.models.User"/>   
    	
    </session-factory>
</hibernate-configuration>
